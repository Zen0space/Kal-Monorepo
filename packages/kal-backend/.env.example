# MongoDB Connection
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=root
MONGODB_PASSWORD=localpassword
MONGODB_DATABASE=kalori_db

# Server
BACKEND_PORT=4000

# Logto Auth (for protected routes)
LOGTO_ENDPOINT=http://localhost:3301
LOGTO_APP_ID=your-app-id
LOGTO_APP_SECRET=your-app-secret

# Redis (optional - caching disabled if not configured)
# Option A: Full connection URL
REDIS_URL=redis://default:password@localhost:6379

# Option B: Individual credentials (REDIS_URL takes precedence)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_USERNAME=default
# REDIS_PASSWORD=your-redis-password
